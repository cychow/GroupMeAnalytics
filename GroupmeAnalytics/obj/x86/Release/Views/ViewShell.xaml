<Page
    x:Class="GroupmeAnalytics.Views.ViewShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GroupmeAnalytics.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:GroupmeAnalytics.Viewmodels"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:MainViewModel />
    </Page.DataContext>

    <Grid Background="White">
        <SplitView x:ConnectionId='1' x:Name="mainSplitView" 
			DisplayMode="CompactOverlay" 
			IsPaneOpen="False" 
			CompactPaneLength="0" 
			OpenPaneLength="300">
            <SplitView.Pane>
                <Grid x:ConnectionId='3' x:Name="GroupMenuPane"
					VerticalAlignment="Stretch"
					HorizontalAlignment="Stretch"
					Background="LightGray"
                      >
                    <ListView x:ConnectionId='4' ItemsSource="{Binding Menu}"
						                                        
						Margin="0 48 0 0"
						VerticalAlignment="Top">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image HorizontalAlignment="Center" 
										Height="50" 
										VerticalAlignment="Center" 
										Width="50" 
										Source="{Binding Source}">
                                    </Image>
                                    <TextBlock Text="{Binding Text}"
										Margin="8 0 0 0"
										Foreground="Black" 
                                        TextWrapping="Wrap" 
                                        Width="180"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

            </SplitView.Pane>
            <Grid>
                <Frame x:ConnectionId='5' x:Name="SplitViewFrame">
                    <Frame.ContentTransitions>
                        <NavigationThemeTransition>
                            <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                                <EntranceNavigationTransitionInfo />
                            </NavigationThemeTransition.DefaultNavigationTransitionInfo>
                        </NavigationThemeTransition>
                    </Frame.ContentTransitions>
                </Frame>
                <TextBlock 
					FontSize="32" 
					Foreground="Black" 
					HorizontalAlignment="Center" 
					VerticalAlignment="Center">
					<Run Text="Welcome to GroupMe Analytics."/>
                </TextBlock>


            </Grid>
        </SplitView>

        <Button x:ConnectionId='2' x:Name="hamburgerButton" 
			FontFamily="Segoe MDL2 Assets" 
			Content="&#xE700;" 
			VerticalAlignment="Top" 
			                        
			Width="50" 
			Height="50" 
			Background="Transparent"/>
    </Grid>

</Page>

